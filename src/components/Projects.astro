---
import json from "./icons/Json.astro";

const TAGS = {
  JWT: {
    name: "JWT",
    class: "bg-black text-white",
    icon: json,
  },
  SPRING: {
    name: "SPRING",
    class: "bg-black text-white",
    icon: json,
  },
};

const PROJECTS = [
  {
    tittle: "API + JWT",
    description:
      "En este proyecto creÃ© una API que emplea Spring Security para la seguridad y utiliza JSON Web Token para autenticar a los usuarios.",
    github: "#",
    image: "",
    tags: [TAGS.JWT, TAGS.SPRING],
  },
];
---

{
  PROJECTS.map(({ image, tittle, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">
        {tittle}
      </h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 border border-white/10`}
            >
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        loading="lazy"
        class="rounded shadow-2xl shadow-white/10 aspect-video"
        alt={`Captura de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
